<?xml version="1.0"?>
<ruleset name="Custom">
    <description>The Symfony coding standard.</description>

    <!-- There should not be any code in the bundle Resources directory. -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*.min.js</exclude-pattern>

    <!-- Symfony follows the standards defined in the PSR-0, PSR-1 and PSR-2 documents. -->
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>
    <rule ref="Symfony"/>

    <rule ref="Generic.Files.LineLength.TooLong">
        <severity>0</severity>
    </rule>
    <rule ref="Generic.Files.LineLength.MaxExceeded">
        <severity>0</severity>
    </rule>
    <rule ref="Symfony.ControlStructure.YodaConditions.Invalid">
        <severity>0</severity>
    </rule>
    <rule ref="Symfony.Formatting.BlankLineBeforeReturn.MissedBlankLineBeforeReturn">
        <severity>0</severity>
    </rule>
</ruleset>
